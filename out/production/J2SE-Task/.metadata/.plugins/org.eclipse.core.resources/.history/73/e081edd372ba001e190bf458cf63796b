package com.map_interface.hospital;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;

public class HospitalService {

	List<Hospital> list = new ArrayList<>();
	HashMap<Integer, String> map = new HashMap<>();

	public int addHospital(Hospital hospital) {

		list.add(hospital);

		return hospital.getHospitalCode();

	}

	public HashMap<Integer, String> getHospitals() {

		for (int i = 0; i < list.size(); i++) {
			map.put(list.get(i).getHospitalCode(), list.get(i).getHospitalName());
		}

		return map;
	}

	public void getHospitalDetails(int code) {
		boolean hospitalExists = false;
		Hospital foundHospital = null;

		for (Hospital hospital : list) {
			if (hospital.getHospitalCode() == code) {
				hospitalExists = true;
				foundHospital = hospital;
				break;
			}
		}

		if (hospitalExists) {
			System.out.println("Hospital details: " + foundHospital);
		} else {
			System.out.println("Hospital with code " + code + " not found");
		}
	}

}
